<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Skating Tracker</title>
        <link href="../css/estilo.css" type="text/css" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@500&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,700;1,600&family=Cormorant+Infant:wght@500&family=Kay+Pho+Du:wght@500&display=swap" rel="stylesheet">
        <!-- CDN BOOTSTRAP CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div> 
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid" style="background-color: #eeeeee;">
                    <a class="navbar-brand">
                        <img alt="logo" width="120" height="120" src="imagenes/icono.jpg">
                    </a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link"  href="home">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="entrenamientos">ENTRENAMIENTOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="perfil">PERFIL</a>
                        </li>
                    </ul>
                    </div>
                </div>
            </nav>
        </div>
        <main>
            <div class="profile-card">
                <h3 class="display-6 fw-normal" style="background-color: #f3d886; color:#222222;" >Perfil</h3>
                <div class="text-center">
                    {{#if name}}
                    <img src="imagenes/icono perfil negro.png" height="150px;">
                        <h2 class="text-uppercase fs-4" style="font-family: 'Kay Pho Du'; text-align:center; font-size: 18px;"><b>{{name}}</b></h2>
                        <p class="fw-normal" style="font-family: 'Kay Pho Du'; text-align:center; font-size: 18px;">{{categoria}}</p>
                        <div class="container">
                            <div class="d-grid gap-2 col-3 mx-auto">
                                <a href="/editUserForm" class="btn btn-primary btn-lg" role="button">Editar información</a>
                                <a href="Reglamento.pdf" download="Reglameto" class="btn btn-primary btn-lg" role="button">Descargar reglamento</a>
                                <a href="/logout" class="btn btn-danger btn-lg" role="button" style="margin-top: 10px;">Log Out</a>  
                            </div>
                            
                        </div>
                    {{/if}}
                </div>
            </div>
        </main>
        
    </body>
    <footer class="text-center mt-5 footer-copyright">
        <div class="text-center p-3" style="background-color: #222222; color:#ded8ae">
            © 2024 Copyright: Virginia García
        </div>
    </footer>
</html>
