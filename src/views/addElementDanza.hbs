        <main >
            <h3 class="display-6 fw-normal font-monospace" style="background-color: #f3d886; color:#222222;">Disco Danza</h3>
            <div class="container text-center mt-3" >
                {{#if (eq codigo 'DSSq')}}
                    <form method="POST" id="formDSSq" action="discoDanzaFree">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Dance Step Sequence a realizar:</p>

                        <input type="radio" name="element" value="DSSqB"/>
                        <label for="DSSqB">DSSqB (Base Rating: 3.0)</label> <br>

                        <input type="radio" name="element" value="DSSq1" />
                        <label for="DSSq1">DSSq1 (Base Rating: 4.0)</label> <br>

                        <input type="radio" name="element" value="DSSq2" />
                        <label for="DSSq2">DSSq2 (Base Rating: 5.5)</label> <br>

                        <input type="radio" name="element" value="DSSq3" />
                        <label for="DSSq3">DSSq3 (Base Rating: 7.1)</label> <br>

                        <input type="radio" name="element" value="DSSq4" />
                        <label for="DSSq4">DSSq4 (Base Rating: 9.3)</label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Dance Step Sequence</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'FoSq')}}
                    <form method="POST" id="formFoSq">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" id="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Footwork Sequence a realizar:</p>

                        <input type="radio" name="element" value="FoSqB"/>
                        <label for="FoSqB">FoSqB (Base Rating: 4.0)</label> <br>

                        <input type="radio" name="element" value="FoSq1" />
                        <label for="FoSq1">FoSq1 (Base Rating: 5.0)</label> <br>

                        <input type="radio" name="element" value="FoSq2" />
                        <label for="FoSq2">FoSq2 (Base Rating: 6.5)</label> <br>

                        <input type="radio" name="element" value="FoSq3" />
                        <label for="FoSq3">FoSq3 (Base Rating: 8.1)</label> <br>

                        <input type="radio" name="element" value="FoSq4" />
                        <label for="FoSq4">FoSq4 (Base Rating: 10.3)</label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Footwork Sequence</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'ASq')}}
                    <form method="POST" id="formASq">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" id="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Artistic Footwork Sequence a realizar:</p>

                        <input type="radio" name="element" value="ASqB"/>
                        <label for="ASqB">ASqB (Base Rating: 3.0)</label> <br>

                        <input type="radio" name="element" value="ASq1" />
                        <label for="ASq1">ASq1 (Base Rating: 4.0)</label> <br>

                        <input type="radio" name="element" value="ASq2" />
                        <label for="ASq2">ASq2 (Base Rating: 5.5)</label> <br>

                        <input type="radio" name="element" value="ASq3" />
                        <label for="ASq3">ASq3 (Base Rating: 7.1)</label> <br>

                        <input type="radio" name="element" value="ASq4" />
                        <label for="ASq4">ASq4 (Base Rating: 9.3)</label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Artistic Footwork Sequence</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'Cl')}}
                    <form method="POST" id="formCl">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" id="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Cluster a realizar:</p>

                        <input type="radio" name="element" value="ClSqB"/>
                        <label for="ClSqB">ClSqB (Base Rating: 3.0)</label> <br>

                        <input type="radio" name="element" value="ClSq1" />
                        <label for="ClSq1">ClSq1 (Base Rating: 4.0)</label> <br>

                        <input type="radio" name="element" value="ClSq2" />
                        <label for="ClSq2">ClSq2 (Base Rating: 5.3)</label> <br>

                        <input type="radio" name="element" value="ClSq3" />
                        <label for="ClSq3">ClSq3 (Base Rating: 6.9)</label> <br>

                        <input type="radio" name="element" value="ClSq4" />
                        <label for="ClSq4">ClSq4 (Base Rating: 7.5)</label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Cluster</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'Tr')}}
                    <form method="POST" id="formTr">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" id="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Travelling a realizar:</p>

                        {{#if (eq categoria 'Benjamin')}}
                            <input type="radio" name="element" value="TrB"/>
                            <label for="TrB">TrB (Base Rating: 2.5)</label> <br>

                            <input type="radio" name="element" value="Tr1" />
                            <label for="Tr1">Tr1 (Base Rating: 3.5)</label> <br>
                        {{else}}
                            <input type="radio" name="element" value="TrB"/>
                            <label for="TrB">TrB (Base Rating: 2.5)</label> <br>

                            <input type="radio" name="element" value="Tr1" />
                            <label for="Tr1">Tr1 (Base Rating: 3.5)</label> <br>

                            <input type="radio" name="element" value="Tr2" />
                            <label for="Tr2">Tr2 (Base Rating: 4.5)</label> <br>

                            <input type="radio" name="element" value="Tr3" />
                            <label for="Tr3">Tr3 (Base Rating: 6.0)</label> <br>

                            <input type="radio" name="element" value="Tr4" />
                            <label for="Tr4">Tr4 (Base Rating: 6.5)</label> <br>
                        {{/if}}

                        <button type="submit" class="btn btn-success mt-2">Agregar Travelling</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'ChStSq')}}
                    <form method="POST" id="formChStSq" action="discoDanzaFree">
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Choreo Step Sequence:</p>

                        <input type="radio" name="element" value="ChStSq"/>
                        <label for="ChStSq">ChStSq (Base Rating: 3)</label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Choreo Step Sequence</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'PtSq')}}
                    <form method="POST" id="formChStSq" action="discoDanzaStyle">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Pattern Sequence:</p>

                        <input type="radio" name="element" value="PtSq"/>
                        <label for="PtSq">PtSq </label> <br>

                        <button type="submit" class="btn btn-success mt-2">Agregar Pattern Sequence</button>
                    </form>
                {{/if}}


                {{#if (eq codigo 'PtSq_ob')}}
                    <form method="POST" id="formDanza_ob" action="discoDanzaStyle">
                        <label for="typeDisc">Disco</label>
                        <input type="text" name="typeDisc" value="{{typeDisc}}" readonly><br>
                        <label for="patinador"></label>
                        <input type="text" name="patinador" value="{{name}}" readonly> - 
                        <label for="categoria"></label>
                        <input type="text" name="categoria" value="{{categoria}}" readonly><br>

                        <label for="code" class="mt-4"></label>
                        <input type="text" name="code" value="{{codigo}}" readonly>

                        <p>Selecciona el Pattern Sequence:</p>
                        
                        <label for="key_point1">KeyPoint 1</label>
                        <select name="key_point1">
                            <option value="Y">Y</option>
                            <option value="N">N</option>
                        </select>
                        <br>
                        <label for="key_point2">KeyPoint 2</label>
                        <select name="key_point2"><br>
                            <option value="Y">Y</option>
                            <option value="N">N</option>
                        </select>
                        <br>
                        <label for="key_point3">KeyPoint 3</label>
                        <select name="key_point3"><br>
                            <option value="Y">Y</option>
                            <option value="N">N</option>
                        </select>
                        <br>
                        <label for="key_point4">KeyPoint 4</label>
                        <select name="key_point4"><br>
                            <option value="Y">Y</option>
                            <option value="N">N</option>
                        </select>
                        <br>

                        <button type="submit" class="btn btn-success mt-3">Agregar Pattern Sequence</button>
                    </form>
                {{/if}}
            </div>
        </main>
        <footer class="text-center mt-5 footer-copyright">
            <div class="text-center p-3" style="background-color: #222222; color:#ded8ae">
                © 2024 Copyright: Virginia García
            </div>
        </footer>
        <script>
            const formFoSq = document.getElementById('formFoSq');
            const formASq = document.getElementById('formASq');
            const formCl = document.getElementById('formCl');
            const formTr = document.getElementById('formTr');

            if(formFoSq){
                formFoSq.addEventListener('submit', (event) => {
                    event.preventDefault();
                    const typeDisc = document.getElementById('typeDisc').value;

                    if (typeDisc == 'Free Dance') 
                    {
                        formFoSq.action = '/discoDanzaFree';
                    } 
                    else {
                        formFoSq.action = '/discoDanzaStyle';
                    }

                    formFoSq.submit();
                });
            }
            
            if(formASq){
                formASq.addEventListener('submit', (event) => {
                    event.preventDefault();
                    const typeDisc = document.getElementById('typeDisc').value;

                    if (typeDisc == 'Free Dance') 
                    {
                        formASq.action = '/discoDanzaFree';
                    } 
                    else {
                        formASq.action = '/discoDanzaStyle';
                    }

                    formASq.submit();
                });
            }
            
            if(formCl){
                formCl.addEventListener('submit', (event) => {
                    event.preventDefault();
                    const typeDisc = document.getElementById('typeDisc').value;

                    if (typeDisc == 'Free Dance') 
                    {
                        formCl.action = '/discoDanzaFree';
                    } 
                    else {
                        formCl.action = '/discoDanzaStyle';
                    }

                    formCl.submit();
                });
            }

            if(formTr){
                formTr.addEventListener('submit', (event) => {
                    event.preventDefault();
                    const typeDisc = document.getElementById('typeDisc').value;

                    if (typeDisc == 'Free Dance') 
                    {
                        formTr.action = '/discoDanzaFree';
                    } 
                    else {
                        formTr.action = '/discoDanzaStyle';
                    }

                    formTr.submit();
                });
            }
        </script>
    </body>
</html>