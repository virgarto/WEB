        <script>
            document.getElementById('searchInput').addEventListener('input', function() {
                var input = this;
                var tabla = document.getElementById('tabla_saltos');
                var rows = tabla.getElementsByTagName('tr');

                // Recorremos las filas
                for (var i = 0; i < rows.length; i++) {
                    // obtenemos la información de las celdas
                    var info_celdas = rows[i].getElementsByTagName('td');
                    var found = false;

                    // Recorremos las celdas
                    for (var j = 0; j < info_celdas.length; j++) {
                        var celda = info_celdas[j];
                        // Se comprueba la información de la celda con el input
                        if (celda.innerText.toLowerCase().indexOf(input.value.toLowerCase()) > -1) {
                            found = true;
                            break;
                        }
                    }

                    // Se muestra las filas que contienen al menos una celda con la información del input
                    if (found) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            });

            const form = document.querySelector('#formSJu');
            form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Selecciona el checkbox marcado
            const checkbox = document.querySelector('.select-item:checked');

            // Obtiene la fila correspondiente al checkbox
            const row = checkbox.parentNode.parentNode;

            // Obtiene el contenido de la celda correspondiente al salto
            const salto = row.querySelector('td').eq(1).innerText;

            // Crea un objeto con los datos a enviar al servidor
            const data = new FormData();
            data.append('salto', salto);
            });
        </script>
    </body>
