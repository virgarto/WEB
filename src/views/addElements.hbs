                document.getElementById('broken-dif').appendChild(radioButtons);
            }); 

            // INVERTED
            const inverted_d = ['bryant, 25%', 'standard, 20%'];   
            document.getElementById('inverted').addEventListener("click", () => {
                const radioButtons = document.createElement('div');
                radioButtons.className = 'invertedPosD';

                for(let i = 0; i < inverted_d.length; i++) {
                    let input = document.createElement('input');
                    input.type = 'radio';
                    input.name = 'invertedPosD';
                    input.value = inverted_d[i].split(', ')[0];

                    let label =  document.createElement('label');
                    label.htmlFor = input.value;
                    label.innerHTML = inverted_d[i];

                    radioButtons.appendChild(input);
                    radioButtons.appendChild(label);
                    radioButtons.appendChild(document.createElement('br'));
                }
                document.getElementById('inverted-dif').appendChild(radioButtons);
            }); 
