        <script> 
            //Script para que el botón "posicion dificil" active la selección
            // UPRIGHT
            let buttonUpPressed = false;
            const upright_d = ['biellman, 2+80%', 'biellman_heel, 3+40%', 'split, 1+50%', 'torso, 1+40%', 'layback, 1+20%', 'forward, 1', 'heel, 50%', 'standard, 20%'];   
            document.getElementById('upright').addEventListener("click", () => {
                if(!buttonUpPressed){
                    buttonUpPressed = true;
                    const radioButtons = document.createElement('div');
                    radioButtons.className = 'uprightPosD';

                    for(let i = 0; i < upright_d.length; i++) {
                        let input = document.createElement('input');
                        input.type = 'radio';
                        input.name = 'uprightPosD';
                        input.value = upright_d[i].split(', ')[0];

                        let label =  document.createElement('label');
                        label.htmlFor = input.value;
                        label.innerHTML = upright_d[i];

                        radioButtons.appendChild(input);
                        radioButtons.appendChild(label);
                        radioButtons.appendChild(document.createElement('br'));
                    }
                    document.getElementById('upright-dif').appendChild(radioButtons);
                }
            });  
            
            // SIT
            const sit_d = ['sideways, 60%', 'twist, 60%', 'forward, 40%', 'behind, 20%', 'standard, 20%'];   
            let buttonSPressed = false;
            document.getElementById('sit').addEventListener("click", () => {
                if(!buttonSPressed){
                    buttonSPressed = true;
                    const radioButtons = document.createElement('div');
                    radioButtons.className = 'sitPosD';

                    for(let i = 0; i < sit_d.length; i++) {
                        let input = document.createElement('input');
                        input.type = 'radio';
                        input.name = 'sitPosD';
                        input.value = sit_d[i].split(', ')[0];

                        let label =  document.createElement('label');
                        label.htmlFor = input.value;
                        label.innerHTML = sit_d[i];

                        radioButtons.appendChild(input);
                        radioButtons.appendChild(label);
                        radioButtons.appendChild(document.createElement('br'));
                    }
                    document.getElementById('sit-dif').appendChild(radioButtons);
                }
            });  
            document.getElementById('sit').disabled = true;

            // CAMEL
            const camels = document.querySelectorAll('#camel, #camel2');
            const camel_d = ['forward, 40%', 'sideways, 60%', 'layover, 20%', 'standard, 20%'];  
            camels.forEach(camel => {
                camel.addEventListener("click", () => {
                    // Diferenciamos el div para saber si se han añadido ya los inputs 
                    const targetDiv = document.getElementById(`${camel.id}-dif`);

                    if (targetDiv.childElementCount === 0) {
                        const radioButtons = document.createElement('div');
                        radioButtons.className = 'camelPosD';

                        for(let i = 0; i < camel_d.length; i++) {
                            // Creamos inputs y label
                            let input = document.createElement('input');
                            input.type = 'radio';
                            input.name = 'camelPosD';
                            input.value = camel_d[i].split(', ')[0];

                            let label =  document.createElement('label');
                            label.htmlFor = input.value;
                            label.innerHTML = camel_d[i];

                            radioButtons.appendChild(input);
                            radioButtons.appendChild(label);
                            radioButtons.appendChild(document.createElement('br'));
                        }

                        targetDiv.appendChild(radioButtons);
                    }
                });
            }); 

            // HEEL
            const heels = document.querySelectorAll('#heel, #heel2');
            const heel_d = ['forward, 40%', 'sideways, 60%', 'layover, 20%', 'standard, 20%'];    
            heels.forEach(heel => {
                heel.addEventListener("click", () => {
                    // Diferenciamos el div para saber si se han añadido ya los inputs, para inhabilitar el botón
                    const targetDiv = document.getElementById(`${heel.id}-dif`);

                    if (targetDiv.childElementCount === 0) {
                        const radioButtons = document.createElement('div');
                        radioButtons.className = 'heelPosD';

                        for(let i = 0; i < heel_d.length; i++) {
                            let input = document.createElement('input');
                            input.type = 'radio';
                            input.name = 'heelPosD';
                            input.value = heel_d[i].split(', ')[0];

                            let label =  document.createElement('label');
                            label.htmlFor = input.value;
                            label.innerHTML = heel_d[i];

                            radioButtons.appendChild(input);
                            radioButtons.appendChild(label);
                            radioButtons.appendChild(document.createElement('br'));
                        }
                        targetDiv.appendChild(radioButtons);
                    }
                });
            }); 

            // BROKEN
            const broken_d = ['forward, 40%', 'sideways, 60%', 'standard, 20%'];   
            document.getElementById('broken').addEventListener("click", () => {
                const radioButtons = document.createElement('div');
                radioButtons.className = 'brokenPosD';

                for(let i = 0; i < broken_d.length; i++) {
                    let input = document.createElement('input');
                    input.type = 'radio';
                    input.name = 'brokenPosD';
                    input.value = broken_d[i].split(', ')[0];

                    let label =  document.createElement('label');
                    label.htmlFor = input.value;
                    label.innerHTML = broken_d[i];

                    radioButtons.appendChild(input);
                    radioButtons.appendChild(label);
                    radioButtons.appendChild(document.createElement('br'));
