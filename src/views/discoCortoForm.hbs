        <script>
        var numJumps = 0;

        function createInputs() {
            // Limpiar el contenedor de inputs dinámicos
            var dynamicInputsContainer = document.getElementById('dinamicInputsJump');
            dynamicInputsContainer.innerHTML = '';

            if(numJumps < 4){
                // Crear los inputs dinámicos
                for (var i = 1; i <= numJumps + 1; i++) {
                var input = document.createElement('input');
                input.type = 'text';
                input.name = 'jump' + i;
                input.placeholder = 'Salto ' + i;
                dynamicInputsContainer.appendChild(input);
                dynamicInputsContainer.appendChild(document.createElement('br'));
                }
            }
            else{
                alert('No se pueden agregar más saltos');
            }
            

            // Incrementar el valor de numJumps
            numJumps++;
        }

        // Agregar un evento de clic al botón "addInputsButton"
        document.getElementById('addInputsButton').addEventListener('click', createInputs);

