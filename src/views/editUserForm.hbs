<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Skating Tracker</title>
        <link href="../css/estiloHome.css" type="text/css" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@500&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,700;1,600&family=Cormorant+Infant:wght@500&family=Kay+Pho+Du:wght@500&display=swap" rel="stylesheet">
    </head>
    <body>
        <section id="topPage">
            <header>
                <img alt="logo" width="120" height="120" src="imagenes/icono.jpg">
            </header>
            <nav>
                <a href="home">HOME</a>
                <a href="entrenamientos">ENTRENAMIENTOS</a>
                <a href="perfil">PERFIL</a>
            </nav>
        </section>
        <main>
            <section id="bannerPage">
                <h2>Perfil</h2>
            </section>
            <form action="" method="POST" class="formEditPat">
                <h2>Editar usuario</h2>

                {{#if error}}
                    <p style="font-family: 'Kay Pho Du'; font-weigth: bold; color: brown">*{{error}}*</p>
                {{/if}}

                <label for="username"><b>Username</b></label><br>
                <input type="text" placeholder="username" name="username"><br><br>

                <label for="password"><b>Password</b></label><br>
                <input type="password" placeholder="contraseña" name="password"><br><br>

                <label for="fecha_nacimiento"><b>Fecha de nacimiento</b></label><br>
                <input type="date"  name="fecha_nacimiento"><br><br>

                <label for="estado"><b>Estado</b></label><br>
                <input type="radio"  name="estado">Activo<br><br>
                <input type="radio"  name="estado">Inactivo<br><br>

                <input type="submit" value="Guardar cambios"><br><br>
                <a href="perfil">Volver atrás</a><br><br>
            </form>
        </main>
    </body>
</html>