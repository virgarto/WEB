<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Patinem</title>
        <link href="../css/estilo.css" type="text/css" rel="stylesheet">
        <link rel="shortcut icon" href="imagenes/icono.jpg">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@500&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,700;1,600&family=Cormorant+Infant:wght@500&family=Kay+Pho+Du:wght@500&display=swap" rel="stylesheet">
        <!-- CDN BOOTSTRAP CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div> 
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand ms-5">
                        <img alt="logo" width="100" height="100" src="imagenes/icono.jpg">
                    </a>
                    <!-- Boton para menu desplegable desde movil -->
                    <button class="navbar-toggler" id="botonMenu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                        </svg>
                    </button>
                    <div class="collapse navbar-collapse" id="menuContent">
                        <ul class="navbar-nav navbar-nav-custom ms-auto">
                            <li class="nav-item">
                                {{#if rol}}
                                    <a class="nav-link" href="entrenamientosList">PATINADORES</a>
                                {{else}}
                                    <a class="nav-link" href="entrenamientos">ENTRENAMIENTOS</a>
                                {{/if}}
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="coreografias">COREOGRAFÍAS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="perfil">PERFIL</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <main>
            <h3 class="display-6 fw-normal font-monospace" style="background-color: #8D92AA; color:#222222;" >Perfil</h3>
            <div class="container text-center mt-4">
                <form action="" method="POST" id="formEditPat">
                    <h2 class="fs-3 fw-normal mt-4">Editar usuario</h2>
                    
                    {{#if error}}
                        <p style="font-family: 'Kay Pho Du'; font-weigth: bold; color: brown">*{{error}}*</p>
                    {{/if}}
                    <label for="username" class="mt-2">Username</label><br>
                    <input type="text" name="username" class="form-control text-center mt-1" value="{{name}}"><br>

                    <label for="password">Contraseña</label><br>
                    <input type="password" name="password" class="form-control text-center mt-1" value="{{password}}"><br>

                    <label for="password">Vuelve a introducir la nueva contraseña</label><br>
                    <input type="password" name="password2" class="form-control text-center mt-1" value=""><br>

                    <a role="button" class="btn btn-outline-secondary mt-4" href="perfil">Volver atrás</a>
                    <button type="submit" class="btn btn-success mt-4">Guardar cambios</button>
                    
                </form>
            </div>
        </main>
        <script>
            // Seleccionamos el botón y el menú
            const navbarToggler = document.getElementById('botonMenu');
            const navbarMenu = document.getElementById('menuContent');

            // Agregamos un evento al botón para mostrar el menú cuando se haga clic
            if(navbarToggler){
                navbarToggler.addEventListener('click', () => {
                navbarMenu.classList.toggle('show');
            });
            }
        </script>
    </body>
</html>